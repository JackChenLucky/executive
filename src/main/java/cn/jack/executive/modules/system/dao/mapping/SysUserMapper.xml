<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jack.executive.modules.system.dao.SysUserMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="cn.jack.executive.modules.system.model.SysUser">
		<id column="id" property="id" />
		<result column="loginname" property="loginname" />
		<result column="sex" property="sex" />
		<result column="birthday" property="birthday" />
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="othername" property="othername" />
		<result column="telphone" property="telphone" />
		<result column="email" property="email" />
		<result column="qq" property="qq" />
		<result column="webchat" property="webchat" />
		<result column="dept" property="dept" />
		<result column="status" property="status" />
		<result column="expiredate" property="expiredate" />
	</resultMap>
	
	<select id="findUserByPage" parameterType="cn.jack.executive.modules.system.model.vo.UserSearchVo" resultType="cn.jack.executive.modules.system.model.vo.SysUserVo">
		SELECT SYS_USER.*,if(status='1','停用','启用') status_nm,
		(SELECT DEPTNAME FROM SYS_DEPT WHERE DEPTCODE=SYS_USER.DEPT) dept_nm 
		FROM SYS_USER WHERE IFNULL(status,'0')!='-1'
		<if test="status != null and status != ''">
             and status=#{status}
        </if>
        <if test="username != null and username != ''">
             and (username like CONCAT('%',#{username},'%') or loginname like CONCAT('%',#{username},'%'))
        </if>
	</select>

</mapper>
